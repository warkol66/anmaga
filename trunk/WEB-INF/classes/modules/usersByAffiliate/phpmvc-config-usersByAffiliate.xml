<!-- Module Users By Affiliate -->
	<action-mappings module="UsersByAffiliate">
		<action      path = "usersByAffiliateList"
								 type = "UsersByAffiliateListAction"
								 name = "usersByAffiliateList"
								scope = "request"
						 validate = "true">
				<forward name="success" path="UsersByAffiliateList.tpl"/>
		</action>

		<action      path = "usersByAffiliateDoEditUser"
								 type = "UsersByAffiliateDoEditUserAction"
								 name = "usersByAffiliateDoEditUser"
								scope = "request"
						 validate = "true">
			<forward name="success" path="/Main.php?do=usersByAffiliateList&amp;message=saved" redirect="true" />
		</action>

		<action      path = "usersByAffiliateDoDelete"
								 type = "UsersByAffiliateDoDeleteAction"
								 name = "usersByAffiliateDoDelete"
								scope = "request"
						 validate = "true">
			<forward name="success" path="/Main.php?do=usersByAffiliateList&amp;message=deleted" redirect="true" />
		</action>

		<action      path = "usersByAffiliateLogin"
								 type = "UsersByAffiliateLoginAction"
								 name = "usersByAffiliateLogin"
								scope = "request"
						 validate = "true">
				<description value="Modulo de ingreso"/>
				<forward name="success" path="UsersByAffiliateLogin.tpl"/>
		</action>

		<action      path = "usersByAffiliateDoLogin"
								 type = "UsersByAffiliateDoLoginAction"
								 name = "usersByAffiliateDoLogin"
								scope = "request"
						 validate = "true">
				<description value="Modulo de ingreso"/>
				<forward name="success" path="UsersByAffiliateWelcome.tpl"/>
				<forward name="failure" path="UsersByAffiliateLogin.tpl"/>
		</action>

		<action      path = "usersByAffiliateWelcome"
								 type = "UsersByAffiliateWelcomeAction"
								 name = "usersByAffiliateWelcome"
								scope = "request"
						 validate = "true">
				<description value="Página de bienvenida"/>
				<forward name="success" path="UsersByAffiliateWelcome.tpl"/>
		</action>

		<action      path = "usersByAffiliateDoLogout"
								 type = "UsersByAffiliateDoLogoutAction"
								 name = "usersByAffiliateDoLogout"
								scope = "request"
						 validate = "true">
				<forward name="success" path="/Main.php?do=index" redirect="true" />
		</action>

		<action    path = "usersByAffiliateDoAddToGroup"
							 type = "UsersByAffiliateDoAddToGroupAction"
							 name = "usersByAffiliateDoAddToGroup"
							scope = "request"
					 validate = "true">
			<forward name="success" path="Main.php?do=usersByAffiliateList" redirect="true" />
		</action>

		<action    path = "usersByAffiliateDoActivate"
							 type = "UsersByAffiliateDoActivateAction"
							 name = "usersByAffiliateDoActivate"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=usersByAffiliateList&amp;message=activated" redirect="true" />
			<forward name="failure" path="/Main.php?do=usersByAffiliateList&amp;message=notactivated" redirect="true" />
		</action>

		<action    path = "usersByAffiliateDoRemoveFromGroup"
							 type = "UsersByAffiliateDoRemoveFromGroupAction"
							 name = "usersByAffiliateDoRemoveFromGroup"
							scope = "request"
					 validate = "true">
			<forward name="success" path="Main.php?do=usersByAffiliateList" redirect="true" />
		</action>

		<action    path = "usersByAffiliatePasswordRecovery"
							 type = "UsersByAffiliatePasswordRecoveryAction"
							 name = "usersByAffiliatePasswordRecovery"
							scope = "request"
					 validate = "true">
			<forward name="success" path="UsersByAffiliatePasswordRecovery.tpl"/>
		</action>

		<action    path = "usersByAffiliateDoPasswordRecovery"
							 type = "UsersByAffiliateDoPasswordRecoveryAction"
							 name = "usersByAffiliateDoPasswordRecovery"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=usersByAffiliateLogin&amp;message=passwordSent" redirect="true" />
			<forward name="failure" path="UsersByAffiliatePasswordRecovery.tpl"/>
		</action>
	</action-mappings>    

